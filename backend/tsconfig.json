{
  // "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["esnext"],
    "outDir": "dist",
    // "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "types": ["node"]
  },
  "include": ["src", "scripts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
