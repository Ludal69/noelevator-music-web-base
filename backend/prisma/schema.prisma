generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id
  email    String     @unique
  password String
  cart     CartItem[]
  orders   Order[] // Added relation field

  @@map(name: "users")
}

model Product {
  id          String    @id
  title       String
  description String
  price       Float
  quantity    Int
  imageUrl    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  cartItems   CartItem[]
  @@map(name: "products")
}

model CartItem {
  id        String   @id
  productId String
  userId    String
  quantity  Int
  size      String
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
  order     Order?   @relation(fields: [orderId], references: [id])
  orderId   String?

  @@unique([productId, userId, size])
  @@map(name: "cart_items")
}

model Order {
  id            String    @id
  userId        String
  user          User      @relation(fields: [userId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  status        String
  cartItems     CartItem[]

  @@map(name: "orders")
}

model ContactMessage {
  id        String   @id
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())

  @@map(name: "contact_messages")  // Nom sp√©cifique pour la table
}
