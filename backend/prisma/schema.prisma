generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MerchProduct {
  id    String    @id
  name  String
  price Float

  @@map(name: "merch_products")
}

model ContactMessage {
  id        String   @id
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())

  @@map(name: "contact_messages")  // Nom sp√©cifique pour la table
}